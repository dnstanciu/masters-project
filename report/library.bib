@article{Pannek2014,
abstract = {AIM: Preterm birth is associated with an increased risk of adverse neurodevelopmental outcomes. Diffusion magnetic resonance imaging (dMRI) combined with tractography can be used to assess non-invasively white matter microstructure and brain development in preterm infants. Our aim was to conduct a systematic review of the current evidence obtained from tractography studies of preterm infants in whom MRI was performed up to term-equivalent age.

