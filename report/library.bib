keywords = {Adolescent,Algorithms,Case-Control Studies,Child,Electroencephalography,Epilepsies,Female,Humans,Male,Models,Multivariate Analysis,Partial,Partial: diagnosis,ROC Curve,Reproducibility of Results,Statistical},
